{
  "plugins": ["stylelint-scss"],
  "extends": ["stylelint-config-airbnb", "stylelint-config-idiomatic-order"],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "max-nesting-depth": null,
    "indentation": [
      2,
      {
        "ignore": ["param"]
      }
    ],
    "number-leading-zero": null
  }
}
